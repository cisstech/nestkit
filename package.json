{
  "name": "root",
  "version": "0.0.0-beta.2",
  "description": "NestKit is a collection of libraries for NestJS developers.",
  "keywords": [
    "NestJS"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cisstech/nestkit"
  },
  "bugs": {
    "url": "https://github.com/cisstech/nestkit/issues"
  },
  "homepage": "https://github.com/cisstech/nestkit",
  "author": {
    "name": "Mamadou Cisse",
    "email": "cisstech@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "nx": "nx",
    "npm": "npm",
    "start": "nx run-many --target=serve --parallel",
    "build:apps": "nx run-many --target=build --projects=api,app --configuration=production",
    "build:libs": "nx run-many --target=build --projects=expand --configuration=production",
    "publish:app": "angular-cli-ghpages --dir=./dist/apps/app",
    "test": "nx run-many --target=test --all --coverage=true --coverageReporters=lcov --watch=false --browsers=ChromeHeadless && node coverage-merger.js",
    "lint": "nx report && nx run-many --target=lint --all",
    "lint:fix": "nx report && nx run-many --target=lint --all --fix",
    "format": "nx format:write",
    "format:write": "prettier . --write",
    "format:check": "prettier . --check",
    "update": "nx migrate latest",
    "dep-graph": "nx dep-graph",
    "clear": "yarn clear:nx && yarn clear:modules && yarn clear:webpack && yarn clear:dist",
    "clear:nx": "rimraf -rf ./node_modules/.cache/nx",
    "clear:modules": "rimraf -rf ./node_modules",
    "clear:webpack": "rimraf -rf ./node_modules/.cache/webpack",
    "clear:dist": "rimraf -rf ./dist/",
    "report": "nx report",
    "release": "standard-version"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~17.0.0",
    "@angular/cdk": "^17.0.1",
    "@angular/common": "~17.0.0",
    "@angular/compiler": "~17.0.0",
    "@angular/core": "~17.0.0",
    "@angular/forms": "~17.0.0",
    "@angular/material": "^17.0.1",
    "@angular/platform-browser": "~17.0.0",
    "@angular/platform-browser-dynamic": "~17.0.0",
    "@angular/router": "~17.0.0",
    "@cisstech/nge": "^16.0.1",
    "@golevelup/nestjs-discovery": "^4.0.0",
    "@nestjs/common": "^10.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/platform-express": "^10.0.2",
    "axios": "^1.0.0",
    "marked": "^10.0.0",
    "monaco-editor": "^0.44.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~17.0.0",
    "@angular-devkit/core": "~17.0.0",
    "@angular-devkit/schematics": "~17.0.0",
    "@angular-eslint/eslint-plugin": "~17.0.0",
    "@angular-eslint/eslint-plugin-template": "~17.0.0",
    "@angular-eslint/template-parser": "~17.0.0",
    "@angular/cli": "~17.0.0",
    "@angular/compiler-cli": "~17.0.0",
    "@angular/language-service": "~17.0.0",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx/angular": "^17.1.3",
    "@nx/devkit": "^17.1.3",
    "@nx/eslint": "^17.1.3",
    "@nx/eslint-plugin": "^17.1.3",
    "@nx/jest": "^17.1.3",
    "@nx/js": "17.1.3",
    "@nx/linter": "^17.1.3",
    "@nx/nest": "^17.1.3",
    "@nx/node": "^17.1.3",
    "@nx/webpack": "^17.1.3",
    "@nx/workspace": "17.1.3",
    "@schematics/angular": "~17.0.0",
    "@swc-node/register": "~1.6.7",
    "@swc/core": "~1.3.85",
    "@types/jest": "^29.4.0",
    "@types/node": "18.7.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "angular-cli-ghpages": "^1.0.7",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "jest-preset-angular": "~13.1.4",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "17.1.3",
    "prettier": "^3.1.0",
    "standard-version": "^9.5.0",
    "sync-json": "^1.0.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.2.2",
    "wait-on": "^7.2.0",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nx": {
    "includedScripts": []
  }
}
